{
  "private": true,
  "name": "indiekit",
  "version": "0.1.0",
  "description": "An IndieWeb publishing toolkit",
  "keywords": [
    "indieweb",
    "micropub"
  ],
  "homepage": "https://getindiekit.com",
  "author": {
    "name": "Paul Robert Lloyd",
    "url": "https://paulrobertlloyd.com"
  },
  "license": "MIT",
  "bugs": "https://github.com/getindiekit/indiekit/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/getindiekit/indiekit.git"
  },
  "engines": {
    "node": "14.x"
  },
  "type": "module",
  "scripts": {
    "postinstall": "lerna bootstrap --no-ci && husky install",
    "dev": "DEBUG=indiekit:* nodemon indiekit.config.js",
    "start": "DEBUG=indiekit:* node indiekit.config.js",
    "lint:markdown": "markdownlint-cli2 '**/*.md' '!**/node_modules' '!**/CHANGELOG.md'",
    "lint:scripts": "xo '**/*.js'",
    "lint:styles": "stylelint '**/*.css'",
    "test": "ava",
    "test:watch": "ava --watch",
    "coverage": "c8 ava"
  },
  "dependencies": {
    "dotenv": "8.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@indiekit-test/config": "file:helpers/config",
    "@indiekit-test/get-fixture": "file:helpers/get-fixture",
    "@indiekit-test/media-data": "file:helpers/media-data",
    "@indiekit-test/post-data": "file:helpers/post-data",
    "@indiekit-test/preset": "file:helpers/preset",
    "@indiekit-test/publication": "file:helpers/publication",
    "@indiekit-test/server": "file:helpers/server",
    "ava": "^3.15.0",
    "c8": "^7.7.2",
    "eslint-plugin-jsdoc": "^34.2.2",
    "husky": "^6.0.0",
    "jsdom": "^16.5.3",
    "lerna": "^4.0.0",
    "markdownlint-cli2": "0.1.3",
    "mock-req-res": "^1.2.0",
    "mongodb-memory-server": "^6.9.6",
    "nock": "^13.0.11",
    "nodemon": "^2.0.7",
    "sinon": "^10.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "supertest": "^6.1.3",
    "xo": "^0.40.1"
  },
  "c8": {
    "all": true,
    "include": [
      "packages"
    ],
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "nodemonConfig": {
    "ext": "css,js,json,njk,md"
  },
  "xo": {
    "space": true,
    "extends": [
      "plugin:jsdoc/recommended"
    ],
    "plugins": [
      "jsdoc"
    ],
    "rules": {
      "camelcase": [
        "warn",
        {
          "allow": [
            "access_token",
            "client_id",
            "error_description",
            "job_id",
            "original_url",
            "success_description"
          ]
        }
      ],
      "capitalized-comments": [
        "error",
        "always",
        {
          "ignorePattern": "c8"
        }
      ],
      "unicorn/import-index": [
        "error",
        {
          "ignoreImports": true
        }
      ],
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "replacements": {
            "application": false
          }
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "packages/frontend/**/*.js"
        ],
        "rules": {
          "unicorn/prefer-module": "off"
        }
      }
    ]
  }
}
