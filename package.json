{
  "name": "@paulrobertlloyd/indiekit",
  "version": "0.0.2",
  "description": "An IndieWeb publishing toolkit",
  "keywords": [
    "indieweb",
    "micropub"
  ],
  "author": "Paul Robert Lloyd",
  "license": "MIT",
  "homepage": "https://paulrobertlloyd.github.io/indiekit/",
  "repository": "github:paulrobertlloyd/indiekit",
  "bugs": "https://github.com/paulrobertlloyd/indiekit/issues",
  "scripts": {
    "prestart": "npm install",
    "start": "node app/server.js",
    "dev": "nodemon app/server.js",
    "test": "ava --verbose",
    "posttest": "rm -r ./.ava_output",
    "coverage": "nyc ava"
  },
  "engines": {
    "node": "11.x"
  },
  "dependencies": {
    "@octokit/rest": "^18.0.3",
    "@timberio/node": "^0.35.0",
    "@timberio/winston": "^0.35.0",
    "camelcase-keys": "^6.2.2",
    "data-store": "^4.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "file-type": "^14.6.2",
    "i18n": "^0.10.0",
    "lodash": "^4.17.19",
    "luxon": "^1.24.1",
    "microformat-node": "^2.0.1",
    "multer": "^1.4.2",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.6.0",
    "normalize-url": "^5.0.0",
    "nunjucks": "^3.2.2",
    "post-type-discovery": "github:grantcodes/post-type-discovery",
    "serve-favicon": "^2.5.0",
    "slug": "^3.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "ava": "^3.11.0",
    "coveralls": "^3.1.0",
    "nock": "^13.0.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "sinon": "^9.0.2",
    "supertest": "^4.0.0",
    "valid-url": "^1.0.9",
    "xo": "^0.32.1"
  },
  "ava": {
    "environmentVariables": {
      "GITHUB_TOKEN": "abc123",
      "GITHUB_USER": "user",
      "GITHUB_REPO": "repo",
      "NODE_ENV": "test"
    },
    "files": [
      "test/**/*.test.js"
    ]
  },
  "nyc": {
    "exclude": [
      "app/config.js",
      "lib/logger.js",
      "test/**/*.test.js"
    ],
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "xo": {
    "space": true,
    "rules": {
      "camelcase": [
        "warn",
        {
          "allow": [
            "access_token",
            "client_id",
            "error_description",
            "error_uri",
            "success_description"
          ]
        }
      ],
      "capitalized-comments": "warn"
    }
  }
}
