{
  "private": true,
  "name": "indiekit",
  "version": "0.3.0",
  "description": "An IndieWeb publishing toolkit",
  "keywords": [
    "indieweb",
    "micropub"
  ],
  "homepage": "https://getindiekit.com",
  "author": {
    "name": "Paul Robert Lloyd",
    "url": "https://paulrobertlloyd.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/getindiekit/indiekit/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/getindiekit/indiekit.git"
  },
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "scripts": {
    "prepublishOnly": "localazy download",
    "postinstall": "husky install",
    "dev": "nodemon",
    "start": "indiekit serve",
    "lint:scripts": "xo '**/*.js'",
    "lint:styles": "stylelint '**/*.css'",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "test": "NODE_NO_WARNINGS=1 ava",
    "coverage": "NODE_NO_WARNINGS=1 c8 ava"
  },
  "workspaces": [
    "helpers/*",
    "packages/*"
  ],
  "dependencies": {
    "dotenv": "^16.0.0",
    "husky": "^8.0.1",
    "lerna": "^5.0.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.2",
    "@babel/plugin-syntax-import-assertions": "^7.17.12",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@indiekit-test/config": "*",
    "@indiekit-test/fixtures": "*",
    "@indiekit-test/media-data": "*",
    "@indiekit-test/mock-agent": "*",
    "@indiekit-test/post-data": "*",
    "@indiekit-test/publication": "*",
    "@indiekit-test/server": "*",
    "@indiekit-test/session": "*",
    "ava": "^4.0.0",
    "c8": "^7.8.0",
    "cookie-session": "^2.0.0",
    "create-indiekit": "*",
    "eslint-plugin-jsdoc": "^39.0.0",
    "jsdom": "^19.0.0",
    "mock-fs": "^5.1.2",
    "mock-req-res": "^1.2.0",
    "mock-session": "^0.0.5",
    "mongodb-memory-server": "^8.2.0",
    "nock": "^13.1.3",
    "nodemon": "^2.0.12",
    "prettier": "^2.5.1",
    "sinon": "^14.0.0",
    "stylelint": "^14.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-order": "^5.0.0",
    "supertest": "^6.1.6",
    "undici": "^5.2.0",
    "xo": "^0.49.0"
  },
  "ava": {
    "workerThreads": false
  },
  "c8": {
    "all": true,
    "exclude": [
      "packages/*/bin",
      "packages/*/tests"
    ],
    "include": [
      "packages"
    ],
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "nodemonConfig": {
    "ext": "css,js,json,njk,md"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-prettier"
    ],
    "plugins": [
      "stylelint-order"
    ]
  },
  "xo": {
    "space": true,
    "extends": [
      "plugin:jsdoc/recommended"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "babelOptions": {
        "plugins": [
          "@babel/plugin-syntax-import-assertions"
        ]
      },
      "requireConfigFile": false,
      "sourceType": "module"
    },
    "plugins": [
      "jsdoc"
    ],
    "prettier": "true",
    "rules": {
      "camelcase": [
        "warn",
        {
          "allow": [
            "access_token",
            "client_id",
            "code_verifier",
            "date_issued",
            "error_description",
            "grant_type",
            "job_id",
            "original_url",
            "redirect_uri",
            "success_description"
          ]
        }
      ],
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "replacements": {
            "application": false
          }
        }
      ]
    }
  }
}
