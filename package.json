{
  "private": true,
  "name": "indiekit",
  "version": "0.1.4",
  "description": "An IndieWeb publishing toolkit",
  "keywords": [
    "indieweb",
    "micropub"
  ],
  "homepage": "https://getindiekit.com",
  "author": {
    "name": "Paul Robert Lloyd",
    "url": "https://paulrobertlloyd.com"
  },
  "license": "MIT",
  "bugs": "https://github.com/getindiekit/indiekit/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/getindiekit/indiekit.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "type": "module",
  "scripts": {
    "postinstall": "lerna bootstrap --no-ci && husky install",
    "dev": "DEBUG=indiekit:* nodemon indiekit.config.js",
    "start": "DEBUG=indiekit:* node indiekit.config.js",
    "lint:markdown": "markdownlint-cli2 '**/*.md' '!**/node_modules' '!**/CHANGELOG.md'",
    "lint:scripts": "xo '**/*.js'",
    "lint:styles": "stylelint '**/*.css'",
    "test": "ava",
    "test:watch": "ava --watch",
    "coverage": "c8 ava"
  },
  "workspaces": [
    "helpers/*",
    "packages/*"
  ],
  "dependencies": {
    "dotenv": "^15.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@indiekit-test/config": "*",
    "@indiekit-test/get-fixture": "*",
    "@indiekit-test/media-data": "*",
    "@indiekit-test/post-data": "*",
    "@indiekit-test/publication": "*",
    "@indiekit-test/server": "*",
    "ava": "^4.0.0",
    "c8": "^7.8.0",
    "eslint-plugin-jsdoc": "^37.0.0",
    "husky": "^7.0.2",
    "jsdom": "^19.0.0",
    "lerna": "^4.0.0",
    "markdownlint-cli2": "0.4.0",
    "mock-req-res": "^1.2.0",
    "mongodb-memory-server": "^8.2.0",
    "nock": "^13.1.3",
    "nodemon": "^2.0.12",
    "sinon": "^13.0.0",
    "stylelint": "^14.0.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "supertest": "^6.1.6",
    "xo": "^0.47.0"
  },
  "ava": {
    "workerThreads": false
  },
  "c8": {
    "all": true,
    "include": [
      "packages"
    ],
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "nodemonConfig": {
    "ext": "css,js,json,njk,md"
  },
  "xo": {
    "space": true,
    "extends": [
      "plugin:jsdoc/recommended"
    ],
    "plugins": [
      "jsdoc"
    ],
    "rules": {
      "camelcase": [
        "warn",
        {
          "allow": [
            "access_token",
            "authorization_endpoint",
            "client_id",
            "code_verifier",
            "error_description",
            "grant_type",
            "job_id",
            "original_url",
            "redirect_uri",
            "success_description",
            "token_endpoint"
          ]
        }
      ],
      "capitalized-comments": [
        "error",
        "always",
        {
          "ignorePattern": "c8"
        }
      ],
      "unicorn/import-index": [
        "error",
        {
          "ignoreImports": true
        }
      ],
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "replacements": {
            "application": false
          }
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "packages/frontend/**/*.js"
        ],
        "rules": {
          "unicorn/prefer-module": "off"
        }
      }
    ]
  }
}
