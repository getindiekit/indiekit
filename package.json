{
  "name": "@paulrobertlloyd/indiekit",
  "version": "0.0.1",
  "description": "IndieWeb publishing toolkit",
  "keywords": [
    "indieweb",
    "micropub"
  ],
  "author": "Paul Robert Lloyd",
  "license": "MIT",
  "homepage": "https://github.com/paulrobertlloyd/indiekit#readme",
  "repository": "github:paulrobertlloyd/indiekit",
  "bugs": "https://github.com/paulrobertlloyd/indiekit/issues",
  "main": "app/main.js",
  "scripts": {
    "start": "node app/main.js",
    "docs": "documentation build app/** -f md -o docs/app.md --markdown-toc false",
    "test": "nyc ava --verbose"
  },
  "dependencies": {
    "@octokit/rest": "^16.16.0",
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "fs-extra": "^7.0.1",
    "luxon": "^1.11.3",
    "microformat-node": "^2.0.1",
    "multer": "^1.4.1",
    "node-fetch": "^2.3.0",
    "normalize-url": "^4.1.0",
    "nunjucks": "^3.1.7",
    "serve-favicon": "^2.5.0",
    "slugify": "^1.3.4"
  },
  "devDependencies": {
    "ava": "^1.2.1",
    "documentation": "^9.2.0",
    "husky": "^1.3.1",
    "minami": "^1.2.3",
    "nyc": "^13.3.0",
    "supertest": "^3.4.2",
    "xo": "^0.24.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run docs"
    }
  },
  "xo": {
    "space": true,
    "rules": {
      "camelcase": "warn",
      "capitalized-comments": "warn"
    },
    "globals": [
      "__basedir"
    ]
  }
}
