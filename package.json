{
  "private": true,
  "name": "indiekit",
  "version": "0.1.0",
  "description": "An IndieWeb publishing toolkit",
  "keywords": [
    "indieweb",
    "micropub"
  ],
  "homepage": "https://getindiekit.com",
  "author": {
    "name": "Paul Robert Lloyd",
    "url": "https://paulrobertlloyd.com"
  },
  "license": "MIT",
  "bugs": "https://github.com/getindiekit/indiekit/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/getindiekit/indiekit.git"
  },
  "engines": {
    "node": "14.x"
  },
  "type": "module",
  "scripts": {
    "postinstall": "lerna bootstrap --no-ci",
    "dev": "DEBUG=indiekit:* nodemon indiekit.config.js",
    "start": "DEBUG=indiekit:* node indiekit.config.js",
    "lint:markdown": "markdownlint '**/*.md'",
    "lint:scripts": "xo '**/*.js'",
    "lint:styles": "stylelint '**/*.css'",
    "test": "ava",
    "test:watch": "ava --watch",
    "coverage": "c8 ava"
  },
  "dependencies": {
    "dotenv": "^8.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "ava": "^3.8.2",
    "c8": "^7.3.5",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^30.7.6",
    "husky": "^4.2.5",
    "lerna": "^3.22.0",
    "markdownlint-cli": "^0.24.0",
    "mock-req-res": "^1.1.4",
    "nock": "^13.0.4",
    "nodemon": "^2.0.6",
    "sinon": "^9.2.1",
    "stylelint": "^13.7.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "supertest": "^6.0.0",
    "xo": "^0.34.1"
  },
  "ava": {
    "environmentVariables": {
      "NODE_ENV": "test",
      "TEST_MONGODB_URL": "mongodb://localhost:27017/test",
      "TZ": "Europe/London"
    },
    "verbose": true
  },
  "c8": {
    "all": true,
    "include": [
      "packages"
    ],
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "nodemonConfig": {
    "ext": "css,js,json,njk,md"
  },
  "xo": {
    "space": true,
    "extends": [
      "plugin:import/errors",
      "plugin:jsdoc/recommended"
    ],
    "plugins": [
      "import",
      "jsdoc"
    ],
    "rules": {
      "camelcase": [
        "warn",
        {
          "allow": [
            "access_token",
            "client_id",
            "error_description",
            "job_id",
            "original_url",
            "success_description"
          ]
        }
      ],
      "capitalized-comments": [
        "error",
        "always",
        {
          "ignorePattern": "c8"
        }
      ],
      "complexity": [
        "warn",
        {
          "max": 25
        }
      ],
      "import/extensions": [
        "error",
        "always"
      ],
      "import/no-useless-path-segments": [
        "error",
        {
          "noUselessIndex": false
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "packageDir": [
            "./",
            "./packages/endpoint-media",
            "./packages/endpoint-micropub",
            "./packages/endpoint-share",
            "./packages/endpoint-syndicate",
            "./packages/frontend",
            "./packages/indiekit",
            "./packages/preset-hugo",
            "./packages/preset-jekyll",
            "./packages/store-github",
            "./packages/store-gitlab"
          ]
        }
      ],
      "unicorn/import-index": [
        "error",
        {
          "ignoreImports": true
        }
      ],
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "replacements": {
            "application": false
          }
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js"
          ]
        }
      }
    }
  }
}
