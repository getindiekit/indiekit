<h2><code>notification</code></h2>

{{ notificationBanner({
  text: "Standard notification",
  details: "Details"
}) }}

{{ notificationBanner({
  type: "error",
  text: "Error notification",
  details: "Details"
}) }}

{{ notificationBanner({
  href: "#",
  type: "success",
  text: "Success notification",
  details: "Details",
  attributes: {
    "disable-auto-focus": "true"
  }
}) }}

<h2><code>pagination</code></h2>

{{ pagination({
  previous: {
    href: "#",
    text: "Back"
  },
  next: {
    href: "#",
    text: "Forward"
  }
}) }}

{{ pagination({
  previous: {
    href: "#"
  },
  items: [{
    current: true,
    href: "#",
    text: "1"
  }, {
    divider: true
  }, {
    href: "#",
    text: "3"
  }],
  next: {
    href: "#"
  }
}) }}

{{ pagination({
  classes: "pagination--block",
  previous: {
    href: "#",
    text: "Previous text",
    label: "Previous label"
  },
  next: {
    href: "#",
    text: "Next text",
    label: "Next label"
  }
}) }}

