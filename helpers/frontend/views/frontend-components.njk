{% extends "document.njk" %}

{%- from "actions/macro.njk" import actions with context -%}
{%- from "authorize/macro.njk" import authorize with context -%}
{%- from "card/macro.njk" import card with context -%}
{%- from "logo/macro.njk" import logo with context -%}
{%- from "navigation/macro.njk" import navigation with context -%}
{%- from "progress/macro.njk" import progress with context -%}
{%- from "share-preview/macro.njk" import sharePreview with context -%}

{% block content %}
<h2><code>actions</code></h2>

{{ actions({
  items: [{
    href: "#",
    text: "Action item"
  }]
}) }}

{{ actions({
  items: [{
    href: "#",
    text: "Action list item"
  }, {
    icon: "delete",
    href: "#",
    text: "Action list item with icon"
  }]
}) }}

<h2><code>action-table</code></h2>

{{ actionTable({
  caption: "Dates and amounts",
  firstCellIsHeader: true,
  head: [
    {
      text: "Name"
    },
    {
      text: "Age"
    }
  ],
  rows: [
    [
      {
        text: "Peter"
      },
      {
        text: "10"
      }
    ],
    [
      {
        text: "Paul"
      },
      {
        text: "12"
      }
    ]
  ]
}) }}

<h2><code>authorize</code></h2>

{{ authorize({
  client: {
    logo: "/assets/app-icon-180.png",
    name: "Indiekit",
    url: "https://getindiekit.com"
  },
  me: "https://website.example",
  key: "auth.consent.authorize.text"
}) }}

<h2><code>backLink</code></h2>

{{ backLink({
  href: "#",
  text: "Back link"
}) }}

<h2><code>badge</code></h2>

{{ badge({
  color: "red",
  text: "Badge"
}) }}

{{ badge({
  color: "offset-red",
  size: "small",
  text: "Small badge"
}) }}

{{ badge({
  icon: "syndicate",
  color: "yellow",
  text: "Badge with icon"
}) }}

{{ badge({
  color: "offset-yellow",
  icon: "syndicate",
  size: "small",
  text: "Small badge with icon"
}) }}

<h2><code>bookmarklet</code></h2>

{{ bookmarklet({
  href: "#",
  text: "Bookmarklet"
}) }}

<h2><code>button</code></h2>

{{ button({
  text: "Button"
}) }}

{{ button({
  text: "Disabled button",
  disabled: true
}) }}

{{ button({
  icon: "syndicate",
  text: "Button with icon"
