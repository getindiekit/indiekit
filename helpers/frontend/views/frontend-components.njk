<h3><code>button (link)</code></h3>

{{ button({
  href: "#",
  text: "Link button"
}) }}

{{ button({
  icon: "syndicate",
  href: "#",
  text: "Link button with icon"
}) }}

{{ button({
  icon: "note",
  iconText: "Link button with icon only",
  href: "#"
}) }}

{{ button({
  href: "#",
  classes: "button--secondary",
  text: "Secondary link button"
}) }}

{{ button({
  href: "#",
  classes: "button--warning",
  text: "Warning link button"
}) }}

{{ button({
  href: "#",
  classes: "button--small",
  text: "Small link button"
}) }}

{{ button({
  href: "#",
  classes: "button--block",
  text: "Block link button"
}) }}

{{ button({
  icon: "note",
  href: "#",
  classes: "button--inline",
  text: "Inline link button"
}) }}

<h2><code>card</code></h2>

{{ card({
  photo: {
    alt: "Alternative text",
    url: "#"
  },
  icon: "delete",
  locale: application.locale,
  title: "Card",
  description: "Description",
  published: "2022-12-29",
  url: "#",
  badges: [{
    color: "red",
    text: "Badge"
  }]
}) }}

<h2><code>cardGrid</code></h2>

{{ cardGrid({
  items: [{
    title: "First card",
    description: "Description",
    published: "2022-12-29",
    url: "#"
  }, {
    title: "Second card",
    description: "Description",
    published: "2022-12-29",
    url: "#"
  }]
}) }}

<h2><code>details</code></h2>

{{ details({
  summary: "Summary",
  text: "Details"
}) }}

<h2><code>footer</code></h2>

{{ footer({
  logo: {
    alt: "Indiekit",
    href: "https://getindiekit.com",
