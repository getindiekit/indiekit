{% macro audioFieldset(index) %}
  {{ fileInput({
    name: "audio[" + index + "]",
    type: "url",
    value: fieldData("audio[" + index + "]").value,
    label: __("posts.form.media.label"),
    accept: "audio/*",
    uploadEndpoint: application.mediaEndpoint,
    attributes: {
      placeholder: "https://"
    },
    errorMessage: fieldData("audio[" + index + "]").errorMessage
  }) | indent(2) }}
{% endmacro %}

{% call addAnother({
  name: __("posts.form.audio.name"),
  fieldset: { legend: __("posts.form.audio.label") }
}) %}
<ol class="add-another__list" role="list">
  {% for key, value in fieldData("audio").value %}
  <li class="add-another__list-item">
    {{ audioFieldset(key or loop.index0) }}
  </li>
  {% else %}
  <li class="add-another__list-item">
    {{ audioFieldset(0) }}
  </li>
  {% endfor %}
</ol>
{% endcall %}