{% from "../input/macro.njk" import input with context %}
{% set tag = opts.localisation.tag | default(__("tagInput.defaultTag")) %}
{% set tags = opts.localisation.tags | default(__("tagInput.defaultTags")) %}
{{ input({
  field: {
    element: "tag-input-field",
    attributes: {
      tag: "{{TAG}} " + tag + ".",
      placeholder: __("tagInput.placeholder", { tags: tags }),
      edit: __("tagInput.edit", { tag: tag }),
      delete: __("tagInput.delete", { name: "{{TAG}}", tag: tag }),
      added: __("tagInput.added", { name: "{{TAG}}", tag: tag }),
      updated: __("tagInput.updated", { name: "{{TAG}}", tag: tag }),
      deleted: __("tagInput.deleted", { name: "{{TAG}}", tag: tag }),
      selected: __("tagInput.selected", { name: "{{TAG}}", tag: tag }),
      "none-selected": __("tagInput.noneSelected", { tags: tags }),
      instruction: __("tagInput.instruction", { list: "{{TAGS}}", tags: tags })
    }
  },
  classes: opts.classes,
  id: opts.id or opts.name,
  name: opts.name,
  value: opts.value,
  label: opts.label,
  hint: opts.hint,
  optional: opts.optional,
  attributes: opts.attributes,
  errorMessage: opts.errorMessage
}) }}