<div class="{{ classes("error-summary", opts.classes) }}" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-controller="error-summary"
  {%- if opts.disableAutoFocus %} data-disable-auto-focus="true"{% endif %}
  {{- attributes(opts.attributes) }}>
  <h2 class="error-summary__title" id="error-summary-title">
    {{ opts.title.text | default(__("errorSummaryTitle")) | safe }}
  </h2>
  <div class="error-summary__body">
  {%- if opts.description.text %}
    <p>{{ opts.description.text | markdown | safe }}</p>
  {%- endif %}
  {%- if opts.errorList %}
    <ul class="error-summary__list">
    {%- for item in opts.errorList %}
      <li>
      {%- if item.href %}
        <a href="{{ item.href }}"{{ attributes(item.attributes) }}>
          {{- item.text | safe -}}
        </a>
      {%- else %}
        {{- item.text | safe -}}
      {%- endif %}
      </li>
    {%- endfor %}
    </ul>
  {%- endif %}
  </div>
</div>