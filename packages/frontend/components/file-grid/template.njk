<ol class="file-grid{{- " " + opts.classes if opts.classes }}">
  {%- for item in opts.items %}
  <li class="file-grid__item">
    {%- set type = item["post-type"] -%}
    {%- if type == "audio" %}
    <audio src="{{ item.url }}" controls>
    {%- elif type == "photo" %}
    <a href="{{ item.id | absoluteUrl(parentUrl) }}">
      <img src="{{ item.url | replace(publication.me, "") | absoluteUrl(application.url + application.imageEndpoint) }}?w=400&#38;h=400&#38;c=true" alt="{{ item.filename }}" onerror="this.src='/assets/not-found.svg'; this.className='not-found';" width="400" height="400">
    </a>
    {%- elif type == "video" %}
    <video src="{{ item.url }}" controls>
    {%- else %}
    <a href="{{ item.url }}" download>{{ __("media.download") }}</a>
    {%- endif %}
  </li>
  {%- endfor %}
</ol>