<ol class="{{ classes("file-grid", opts) }}" role="list">
  {%- for item in opts.items %}
  <li class="file-grid__item">
    <a href="{{ item.id | absoluteUrl(parentUrl) }}">
    {%- set type = item["post-type"] -%}
    {%- if type == "audio" %}
      <audio src="{{ item.url }}" controls></audio>
    {%- elif type == "photo" %}
      <img src="{{ item.url | replace(publication.me, application.url + application.imageEndpoint + '/') }}?w=400&#38;h=400&#38;c=true" alt="{{ item.alt }}" onerror="this.src='/assets/not-found.svg'; this.className='not-found';" width="400" height="400">
    {%- elif type == "video" %}
      <video src="{{ item.url }}"></video>
    {%- else %}
      {{ __("media.download") }}
    {%- endif %}
    </a>
  </li>
  {%- endfor %}
</ol>