<footer class="footer">
  <div class="footer__container">
{%- if opts.navigation %}
    <nav class="footer__navigation" aria-label="secondary">
    {%- for item in opts.navigation %}
      {%- if item.href and item.text %}
      <a href="{{ item.href }}">{{ item.text | safe }}</a>
      {%- endif %}
    {%- endfor %}
    </nav>
{%- endif %}
{%- if opts.logo %}
    <a class="footer__logo" href="{{ opts.logo.href }}">
      <img class="u-logo" src="{{ opts.logo.src }}" alt="{{ opts.logo.alt }}"/>
    </a>
{%- endif %}
  </div>
</footer>