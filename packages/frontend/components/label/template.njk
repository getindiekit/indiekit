{%- if opts.text -%}
{%- set label -%}
<label class="{{ classes("label", opts) }}"
  {%- if opts.for %} for="{{ opts.for }}"{% endif %}
  {{- attributes(opts.attributes) }}>
  {{- opts.text | safe -}}
  {{ " " + __("optionalValue") if opts.optional }}
</label>
{%- endset -%}
{{ label | safe }}
{%- endif -%}