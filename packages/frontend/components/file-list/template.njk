<ol class="{{ classes("file-list", opts) }}" role="list">
  {%- for item in opts.items %}
  <li class="file-list__item">
    <h2 class="file__title">
      {{ icon(item["post-type"]) }}<a href="{{ item.id | absoluteUrl(parentUrl) }}">{{ item.name or item["post-type"] | capitalize }}</a>
    </h2>
    <p class="file__meta">{{ item.published | date("p • PPP") }}</p>
  </li>
  {%- endfor %}
</ol>