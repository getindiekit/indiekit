<ol class="{{ classes("file-list", opts) }}" role="list">
  {%- for item in opts.items %}
  <li class="{{ classes("file-list__item", item) }}">
    {{ icon(item["post-type"]) }}
    <div class="file__body">
      <h2 class="file__title">
        <a href="{{ item.id | absoluteUrl(parentUrl) }}">{{ item.name or item["post-type"] | capitalize }}</a>
      </h2>
      {% if item.published %}
      <footer class="file__footer">
        <time datetime="{{ item.published }}">{{ item.published | date("PPp") }}</time>
        {{ badge({
          classes: "badge--small badge--" + status[item["post-status"]].color,
          text: __(status[item["post-status"]].text)
        }) if item["post-status"] }}
        {{ badge({
          classes: "badge--small badge--" + status.syndicated.color,
          icon:  status.syndicated.icon,
          text: __(status.syndicated.text)
        }) if item["post-status"] === "published" and item.syndication }}
        {{ badge({
          classes: "badge--small badge--" + status[item.visibility].color,
          icon:  status[item.visibility].icon,
          text: __(status[item.visibility].text)
        }) if item["post-status"] === "published" and item.visibility and item.visibility !== "_ignore" }}
      </footer>
      {% endif %}
    </div>
  </li>
  {%- endfor %}
</ol>