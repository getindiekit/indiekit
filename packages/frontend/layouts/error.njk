{% extends "default.njk" %}

{% block main %}
{% call article({
  title: title
}) -%}
  <p>
    {{- content | markdown("inline") | safe if content -}}
    {%- if uri -%} <a href="{{ uri }}">Learn more</a>{%- endif -%}
  </p>
  <details>
    <summary>{{ name }}</summary>
    <pre><code>{{ stack }}</code></pre>
  </details>
  <p><small>Status code: <code>{{ status }}</code></small></p>
{%- endcall %}
{% endblock %}