{% extends "form.njk" %}

{% block fieldset %}
  {{ input({
    id: "file",
    name: "file",
    value: errors["file"].value or file,
    label: {
      text: __("files.upload.file")
    },
    type: "file",
    errorMessage: {
      text: errors["file"].msg
    } if errors["file"]
  }) | indent(2) }}

  {{ button({
    text: __("files.upload.submit"),
    attributes: {
      formenctype: "multipart/form-data"
    }
  }) | indent(2) }}
{% endblock %}